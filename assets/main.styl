contentWidth = 60em
accentCol = #333

*
	box-sizing border-box
	vertical-align top

body
	margin 0
	font-family sans-serif
	background-color #000
	color #fff

main
	margin 0 auto
	min-height 100vh
	max-width contentWidth
	padding 1em 1em 4em

footer
	margin-top -3em
	background-color accentCol
	div
		margin auto
		max-width contentWidth
		padding 1em .75em
		line-height 1.5em

h2, tbody, tr+tr>td
	border-top 1px solid accentCol

h2
	padding-top .25em

table
	border-collapse collapse
	td
		padding .25em .5em

a
	color aqua